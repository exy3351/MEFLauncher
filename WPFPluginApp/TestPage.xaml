<Page x:Class="WPFPluginApp.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFPluginApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">
    <Page.Resources>
        <XmlDataProvider  x:Key="pXML" XPath="/Products"  IsAsynchronous="True" Source="store.xml"></XmlDataProvider>
    </Page.Resources>
    <Grid>
        <ListBox x:Name="lstXML" DisplayMemberPath="ModelName" ItemsSource="{Binding Source={StaticResource pXML},XPath=Product}" HorizontalAlignment="Stretch" Height="422" Margin="10,0,0,0" VerticalAlignment="Stretch" Width="699"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="725,10,0,1" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Page>
