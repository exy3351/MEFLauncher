<Window x:Class="WPFPluginApp.FrmPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPluginApp"
        mc:Ignorable="d"
        Title="FrmPage" Height="450" Width="800">
    <Window.Resources>
        <XmlDataProvider  x:Key="pXML" XPath="/Products"  IsAsynchronous="True" Source="store.xml"></XmlDataProvider>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="lstXML" DisplayMemberPath="ModelName" ItemsSource="{Binding Source={StaticResource pXML},XPath=Product}" HorizontalAlignment="Left" Height="276" Margin="95,28,0,0" VerticalAlignment="Top" Width="568"/>

    </Grid>
</Window>
